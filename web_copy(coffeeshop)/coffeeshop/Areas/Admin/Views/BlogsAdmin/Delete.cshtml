@model coffeeshop.Context.Blog

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 align="center" class="text-primary">DELETE</h2>

<h3 align="center" class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <h4 align="center" class="text-danger">Blogs</h4>
    <hr />
    <dl class="dl-horizontal mx-5">
        <dt class="text-primary">
            @Html.DisplayNameFor(model => model.Tenlogs)
        </dt>

        <dd class="p-2">
            @Html.DisplayFor(model => model.Tenlogs)
        </dd>

        <dt class="text-primary">
            @Html.DisplayNameFor(model => model.Chitiet)
        </dt>

        <dd class="p-2">
            @Html.DisplayFor(model => model.Chitiet)
        </dd>

        <dt class="text-primary">
            @Html.DisplayNameFor(model => model.Img)
        </dt>

        <dd class="p-2">
            @Html.DisplayFor(model => model.Img)
        </dd>

    </dl>
    @using (Html.BeginForm("Delete", "BlogsAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-decoration-none " align="center">
            <input type="submit" value="Delete" class="btn btn-warning text-primary mx-3" />|
            <div class="btn btn-warning text-decoration-none mx-2 ">
                <a class="text-decoration-none text-primary" @Html.ActionLink("Back to Blogs", "Index")

            </div>
        </div>
    }
</div>
