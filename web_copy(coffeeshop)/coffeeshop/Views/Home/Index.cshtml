@model coffeeshop.Models.Product_Category
@{
    ViewBag.Title = "Home Page";
}




<!--Start Home-->
<div id="home">
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <div class="home-content mx-5 ">

        <h1 style="color: #ffc107;">WELLCOME TO DREAM COFFEE</h1>
        <h3>Enjoy Coffee</h3>
        <p>A place that gives you a refreshing feeling with great drinks ! <br> What are you waiting for ! Come to us DREAM COFFEE</p>
        <button type="button" class="btn btn-warning">Get Started</button>
    </div>
</div>
<!--End Home-->
<!--Start About-->
<div id="about-us" class="container section">
    <div class="row header-section">
        <h1>About Us</h1>
    </div>
    <div class="row" style="background-color: #302c21; border: 1px solid #e5b524;">
        <div class="img-section col-12 col-md-6">
            <img src="~/Content/acess/img/about-img.jpeg" alt="">
        </div>
        <div class="col-12 col-md-6 about-content">
            <h3 style="color: #ffc107;">What Makes Our Coffee Special?</h3>
            <p>Coffee has always been a part of people’s life since time immemorial. Whether you nurse a cup of java in the morning or sip a coffee latte frappe in the evening, it can make a world of difference. Not only does the caffeine make you alive and kicking, but it also has various health benefits.</p>
            <p>Its quality springs from the start-the type of coffee beans grown, the region, roasting, and brewing, down to the actual coffee served right under your nose.</p>
            <button type="button" class="btn btn-warning">Learn More</button>
        </div>
    </div>
</div>
<!--End About-->
<!--Start Menu-->

<div id="menu-section" class="container section">
    <div class="row header-section">
        <h1>Coffee Menu</h1>
    </div>
    <div class="row">
        @foreach (var item in Model.ListCategory)
        {
            <div class="col-12 col-md-4 menu-child">
                <div class="menu-img">
                    <img src="~/Content/acess/img/@item.Img" alt="">
                </div>
                <h6>@item.Name</h6>
                <p>@item.Price VND</p>
                <button type="button" class="btn btn-warning">Order Now</button>
            </div>

        }
    </div>
</div>


<!--End Menu-->
<!--Start Product-->
<div id="product-section" class="container section">
    <div class="row header-section">
        <h1>Products</h1>
    </div>
    <div class="row product-list">
        @foreach (var item in Model.ListProduct)
        {
            <div class="col-12 col-md-4 product-item">
                <div class="product-img">
                    <img src="~/Content/acess/img/@item.Img" alt="Product-1" style="width:151px;height:237px;">
                </div>
                <h6>@item.Name</h6>
                <h6 style="color: #e5b524;">
                    <i class="ti-star"></i><i class="ti-star"></i><i class="ti-star"></i><i class="ti-star"></i><i class="ti-star"></i>
                </h6>
                <p>@item.Price VND</p>
                <button type="button" class="btn btn-warning">Buy Now</button>
            </div>

        }

    </div>
</div>
<!--End Product-->
