@model coffeeshop.Context.Blog

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

<h2 align="center" class="text-primary">EDIT</h2>


@using (Html.BeginForm("Edit", "BlogsAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 align="center" class="text-danger">Blogs</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group  mx-5 text-primary">
            @Html.LabelFor(model => model.Tenlogs, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 my-3 mx-3 border border-primary rounded opacity-75 w-50">
                @Html.EditorFor(model => model.Tenlogs, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tenlogs, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group   mx-5 text-primary mt-5">
            @Html.LabelFor(model => model.Chitiet, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextAreaFor(model => model.Chitiet, new { htmlAttributes = new { @class = "form-control", @id = "Chitiet" } })
            <script type="text/javascript" lang="javascript">
                CKEDITOR.replace("Chitiet");
            </script>
            @Html.ValidationMessageFor(model => model.Chitiet, "", new { @class = "text-danger" })
        </div>

        <div class="form-group  mx-5 text-primary mt-5">
            @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10  my-3 mx-3  w-50 bg-primary rounded text-warning">
                <input type="file" name="ImageUpload" />
            </div>
        </div>

        <div class="form-group" align="center">
            <div class="col-md-offset-2 col-md-10 col-8">
                <input type="submit" style="margin-left:-22px;" value="Save" class="btn btn-primary my-3 " />
            </div>
        </div>
    </div>
}

<div class="mx-5 text-primary">
    <<=
    <a class="text-decoration-none" @Html.ActionLink("Back to Blogs", "Index") </a>
</div>

