
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Fotgotpas.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Password Reset - SB Admin</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body  style="background-image: url('../../Content/acess/img/about-img.jpeg');background-size:100%">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5 bg-dark text-opacity-100 opacity-75">
                                <div class="card-header"><h3 class="text-center font-monospace text-warning my-4">Password Recovery</h3></div>
                                <div class="card-body">
                                    <div class="small mb-3 text-danger">Enter your email address and we will send you a link to reset your password.</div>
                                    <form>
                                        <div class="form-floating mb-3">
                                            <input class="form-control border border-primary rounded" id="inputEmail" type="email" placeholder="name@example.com" />
                                            <label for="inputEmail">Email address</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            @Html.ActionLink("Return to login", "Index","Dangnhap",null,new { style="color:white"})
                                            <button type="submit" class="border border-warning rounded btn btn-primary">Reset Password</button>
                                          
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small">@Html.ActionLink("Need an account? Sign up!", "Index", "TTaiKhoan", null, new { Style = "color:white" })</div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div>
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted text-white"> Your Website 2021</div>
                <div class="mx-2">
                    <a href="#">Design</a>
                    &middot;
                    <a href="#"> HTL</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/scripts.js"></script>
</body>
</html>
