
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Register.cshtml";
}
@model coffeeshop.Models.USER
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body style="background-image: url('../../Content/acess/img/about-img.jpeg');background-size:100%">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">

            @using (Html.BeginForm("Index", "TTaiKhoan", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5 bg-dark opacity-75 text-opacity-100">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4 text-warning font-monospace">Create Account</h3></div>
                                    <div class="card-body">
                                        <form>
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <label class="text-warning">Email</label>
                                            <div class="form-floating mb-3 border border-primary rounded">
                                                @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control border border-primary", @placeholder = "Email" ,@type="Email"} })
                                                @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-md-12">
                                                    <label class="text-warning">Password</label>
                                                    <div class="form-floating mb-3 mb-md-0 border border-primary rounded">
                                                        @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control border border-primary", @placeholder = "Password", @type = "Password" } })
                                                        @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="mt-4 mb-0">
                                                <div class="d-grid"><button type="submit" class="btn btn-primary btn-block text-light border border-warning rounded">Create Account</button></div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small">@Html.ActionLink("Have an account? Go to login", "Index", "Dangnhap", null, new { Style = "color:white" })</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>

            }
        </div>
        <div>
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted text-white"> Your Website 2021</div>
                <div class="mx-2">
                    <a href="#">Design</a>
                    &middot;
                    <a href="#"> HTL</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script src="~/Content/js/scripts.js"></script>
</body>
</html>

