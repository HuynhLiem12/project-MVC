

<!DOCTYPE html>
<html lang="en">
<head>
    <title>DREAM COFFEE</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.0.2 -->
    <link rel="stylesheet" href="~/Content/acess/css/style.css">
    <link href="~/Content/acess/register.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/acess/icon/themify-icons/themify-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div id="main">
        <!--Start Header-->
        <div id="header">
       
            <div id="menu" >
                @Html.ActionLink("HOME", "Index", "Home")
                @Html.ActionLink("ABOUT", "Index", "about")
                @Html.ActionLink("MENU", "Index", "menu")
                @Html.ActionLink("PRODUCT", "Index", "product")
                @Html.ActionLink("REVIEW", "Index", "review")
                @Html.ActionLink("CONTACT", "Index", "contact")
                @Html.ActionLink("BLOGS", "Index", "blogs")

           

            </div>

            <div id="header-right" class="mx-2 align-items-center justify-content-between">
                @if (Session["customer"] != null)
                {
                    <i class="icon ti-search js-search"></i>
                    <i class="icon ti-shopping-cart js-cart"></i>

                    @*Login *@
                    <!-- Example split danger button -->
            <div class="btn-group">
                <button class="btn btn-warning btn-sm dropdown-toggle " type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class=" ti-menu"></i>
                </button>
                <ul class="dropdown-menu bg-warning font-monospace  " aria-labelledby="dropdownMenuButton2">
                    <li>  @Html.ActionLink(" Account", "Index", "Dangnhap", null, new { @class = " ti-user dropdown-item text-dark p-2 fs-5 ", style = "text-decoration:none; text-align:center" }) </li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a href="~/Admin/HomeAdmin/Index" class= "ti-server dropdown-item p-3 fs-6" > Admin</a></li>
                    <li><a href="#" class=" ti-settings dropdown-item p-3 fs-6"> Settings</a></li>
                    <li> <a href="@Url.Action("Logout", "Home")" class=" ti-export  text-decoration-none dropdown-item text-dark p-3 fs-6"> Logout</a></li>
                    
                </ul>
            </div>
                    
                }
                else
                {
                    <i class="icon ti-search js-search"></i>
                    <i class="icon ti-shopping-cart js-cart"></i>
                    @Html.ActionLink(" ", "Index", "Dangnhap", null, new { @class = "icon ti-user", style = "text-decoration:none" })

                }

            </div>




            }
            <div class="dropdown menu-mobile">
                <button class="btn btn-secondary dropdown-toggle btn-mobile-menu" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="icon-menu ti-menu"></i>
                </button>
                <ul class="dropdown-menu bg-warning" aria-labelledby="dropdownMenu2">
                    <li class="dropdown-item" type="button"> @Html.ActionLink("Home", "Index", "Home",null, new { style = "text-decoration:none; color:#000" })</li>
                    <li class="dropdown-item" type="button">  @Html.ActionLink("About", "Index", "about",null, new { style = "text-decoration:none; color:#000" })</li>
                    <li class="dropdown-item" type="button">  @Html.ActionLink("Menu", "Index", "menu",null, new { style = "text-decoration:none; color:#000" })</li>
                    <li class="dropdown-item" type="button"> @Html.ActionLink("Product", "Index", "product",null, new { style = "text-decoration:none; color:#000" })</li>
                    <li class="dropdown-item" type="button">  @Html.ActionLink("Review", "Index", "review",null, new { style = "text-decoration:none; color:#000" })</li>
                    <li class="dropdown-item" type="button">  @Html.ActionLink("Contact", "Index", "contact",null, new { style = "text-decoration:none; color:#000" })</li>
                    <li class="dropdown-item" type="button"> @Html.ActionLink("Blogs", "Index", "blogs",null, new { style = "text-decoration:none; color:#000" })</li>

                </ul>
            </div>


            <!--Search Form-->
            <form class="search-form">
                <i class="icon ti-search"></i>
                <input type="text" placeholder="Search here...">
            </form>
            <!--Cart Form-->
            <div class="cart-form">
                <div class="cart-item">
                    <span class="ti-close i-close"></span>
                    <img src="~/Content/acess/img/cart-item-1.png" alt="">
                    <div class="cart-content">
                        <h3>Caffee White</h3>
                        <p>100.000 VND</p>
                    </div>
                </div>

                <div class="cart-item">
                    <span class="ti-close i-close"></span>
                    <img src="~/Content/acess/img/cart-item-2.png" alt="">
                    <div class="cart-content">
                        <h3>Caffee Black</h3>
                        <p>100.000 VND</p>
                    </div>
                </div>

                <div class="cart-item">
                    <span class="ti-close i-close"></span>
                    <img src="~/Content/acess/img/cart-item-3.png" alt="">
                    <div class="cart-content">
                        <h3>Caffee Green</h3>
                        <p>100.000 VND</p>
                    </div>
                </div>

                <div class="cart-item">
                    <span class="ti-close i-close"></span>
                    <img src="~/Content/acess/img/cart-item-4.png" alt="">
                    <div class="cart-content">
                        <h3>Caffee Brown</h3>
                        <p>100.000 VND</p>
                    </div>
                </div>
                <button type="button" class="btn btn-warning btn-cart">Check Now</button>
            </div>

        </div>
        
        <!--End Header-->
       
            @RenderBody()
     
        <!--Start Flooter-->
        <div id="flooter" class="p-3 ">
            <h4 ><i class="ti-facebook"></i><i class="ti-youtube"></i><i class="ti-html5"></i><i class="ti-css3"></i></h4>
            <p>Design Front-end by <a>Phạm Hoàng Minh</a> and Back-end by <a>Huỳnh Thanh Liêm</a></p>
        </div>
        <!--End Flooter-->
    </div>

    <!--JavsScript-->
    <script>
       

        var search = document.querySelector('.search-form');
        document.querySelector('.js-search').onclick = () => {
            search.classList.toggle('search-active')
        }

        var cart = document.querySelector('.cart-form');
        document.querySelector('.js-cart').onclick = () => {
            cart.classList.toggle('cart-active')
        }

    </script>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/acess/scripts.js"></script>
</body>
</html>



