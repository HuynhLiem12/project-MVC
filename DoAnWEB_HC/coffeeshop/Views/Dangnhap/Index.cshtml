
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Login.cshtml";
}

@model coffeeshop.Models.USER
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - SB Admin</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body style="background-image: url('../../Content/acess/img/about-img.jpeg');background-size:100%">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            @using (Html.BeginForm("Index", "Dangnhap", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <main>
                    <div class="container ">
                        <div class="row justify-content-center">
                            <div class="col-lg-5 ">
                                <div class="card shadow-lg border-0 rounded-lg mt-5 bg-dark opacity-75 text-opacity-100">
                                    <div class="card-header "><h3 class="text-center text-warning font-monospace my-4">Login</h3></div>
                                    <div class="card-body ">

                                        <form>
                                            @Html.AntiForgeryToken()
                                            <label class="text-warning">Email</label>

                                            <div class="form-floating mb-3 border border-primary rounded">

                                                @Html.TextBoxFor(m => m.NAME, "", new { @class = "form-control", @id = "inputEmail", @type = "email", @placeholder = "name@example.com" })
                                            </div>
                                            <label class="text-warning">Password</label>
                                            <div class="form-floating mb-3 border border-primary rounded">

                                                @Html.TextBoxFor(m => m.PASSWORD, new { @class = "form-control", @placeholder = "PASSWORD",@type="PASSWORD" })
                                            </div>
                                            <div class="form-check mb-3 ">
                                                <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                                <label class="form-check-label text-warning" for="inputRememberPassword">Remember Password</label>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between  mt-4 mb-0 ">
                                                @Html.ActionLink("Forgot Password", "Index", "Forgotpas", null, new { Style = "color:white" })

                                                <button type="submit" class="btn btn-primary border border-warning rounded w-25">Login</button>
                                            </div>

                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small">@Html.ActionLink("Need an account? Sign up!", "Index", "TTaiKhoan", null, new { Style = "color:white" })</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>

            }
        </div>


        <div>
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted text-white"> Your Website 2021</div>
                <div class="mx-2">
                    <a href="#">Design</a>
                    &middot;
                    <a href="#"> HTL</a>
                </div>
            </div>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/scripts.js"></script>
</body>
</html>
